<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="devapp.matchgame.GameActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/arkaplan_oyun_ekrani"
    android:id="@+id/relativeLayout"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textViewCBaslik"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="@string/TIME"
        android:textStyle="bold" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/chronometer"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewCBaslik"
        android:layout_toEndOf="@+id/textViewCBaslik" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/START"
        android:id="@+id/startButton"
        style="@android:style/Widget.Button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textViewSkorB"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="@string/SCORE"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewSkor"
        android:layout_toStartOf="@+id/textViewSkor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textViewSkor"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="@string/SIFIR"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:useDefaultMargins="true"
        android:id="@+id/gridLayout">
    </GridLayout>
</RelativeLayout>




